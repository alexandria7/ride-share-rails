
    <h2>Driver Profile</h2>

    <strong>Name:</strong> <%= @driver.name %>
    <br>

    <strong>VIN:</strong> <%= @driver.vin %>
    <br>

    <% if @driver[:available] == true %>
      <strong>Status:</strong> Available
    <% else %>
      <strong>Status:</strong> Unavailable
    <% end %>

  <%= link_to "Edit Driver Info", edit_driver_path(@driver.id) %>
   <%= link_to "Delete Driver", driver_path(@driver), method: :delete, data: { confirm: "are you sure you want to delete #{@driver.name}"} %>

    <table>
      <tr>
        <th>ID</th>
        <th>Date</th>
        <th>Passenger</th>
        <th>Price</th>
        <th>Rating</th>
      </tr>
    </table>
  </div>