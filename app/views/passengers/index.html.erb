<h1>Passengers</h1>
<h3>All Passengers:</h3>

<%= link_to "Add a new passenger", new_passenger_path %>

<table class = "table">
<tr>
<th>Name</th>
<th>Telephone</th>
</tr>
<tr>
<%@passengers.each do |passenger|%>
        <td><%= link_to passenger.name, passenger_path(passenger.id) %></td>
        <td>Phone number: <%= passenger.phone_num %></td>
        </tr>
    <%end%> 
    </table>